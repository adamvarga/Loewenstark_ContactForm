<?xml version="1.0"?>
<config>
    <tabs>
        <ls_contactform translate="label">
            <label>Loewenstark</label>
            <sort_order>150</sort_order>
        </ls_contactform>
    </tabs>
    <sections>
        <ls_contactform translate="label" module="adminhtml">
            <label>ContactForm</label>
            <tab>ls_contactform</tab>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <subject_general translate="label comment">
                    <label>Subject</label>
                    <sort_order>50</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active_subject translate="label">
                            <label>Enabled subject field</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active_subject>
                    </fields>
                </subject_general>
                <agreement_general translate="label comment">
                    <label>Agreement</label>
                    <sort_order>60</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active_agreement translate="label">
                            <label>Enabled agreement checkbox</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active_agreement>
                        <agreement_title translate="label">
                            <label>Agreement Title</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </agreement_title>
                        <agreement_text translate="label">
                            <label>Agreement Text</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Agreement text can be html]]></comment>
                        </agreement_text>
                    </fields>
                </agreement_general>
            </groups>
        </ls_contactform>
    </sections>
</config>